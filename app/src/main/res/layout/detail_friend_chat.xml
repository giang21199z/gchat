<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvFriendChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giang"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imvChatLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvFriendChat"
        android:src="@drawable/chat_left" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imvChatLeft"
        android:background="#9cef19"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_chat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvFriendChat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Người ấy"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@+id/imvChatRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_right"
        android:layout_alignTop="@+id/rl2"
        android:layout_toStartOf="@+id/tvFriendChat2" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d8f2ff"
        android:layout_alignTop="@+id/rl1"
        android:layout_toStartOf="@+id/imvChatRight">

        <TextView
            android:id="@+id/tv_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>
